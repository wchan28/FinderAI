{
  "name": "finderai",
  "version": "1.0.0",
  "description": "Search your local files with natural language",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p electron/tsconfig.json && vite build && electron-builder",
    "build:web": "tsc && vite build",
    "build:backend:mac": "chmod +x ../scripts/build-backend-mac.sh && ../scripts/build-backend-mac.sh",
    "build:backend:win": "powershell -ExecutionPolicy Bypass -File ../scripts/build-backend-win.ps1",
    "build:all:mac": "npm run build:backend:mac && npm run build",
    "build:all:win": "npm run build:backend:win && npm run build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build:web && electron-builder"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.59.2",
    "@supabase/supabase-js": "^2.89.0",
    "lucide-react": "^0.312.0",
    "mime-types": "^2.1.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/mime-types": "^2.1.4",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.finderai.app",
    "productName": "FinderAI",
    "protocols": {
      "name": "FinderAI",
      "schemes": [
        "finderai"
      ]
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.icns",
      "identity": null
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "extraResources": [
      {
        "from": "python-dist/${os}",
        "to": "python-backend",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
